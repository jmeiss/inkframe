# Google Photos shared album URL (required)
# Example: https://photos.app.goo.gl/xxxxx or https://photos.google.com/share/xxxxx
GOOGLE_PHOTOS_ALBUM_URL=

# Image selection weights
# Photos newer than RECENT_THRESHOLD_DAYS get RECENT_WEIGHT% chance of selection
RECENT_THRESHOLD_DAYS=90
RECENT_WEIGHT=80
OLD_WEIGHT=20

# Number of recently shown images to track (avoids repetition)
HISTORY_SIZE=20

# Server configuration
PORT=3000
HOST=0.0.0.0

# How often to refresh the album photo list (in minutes)
ALBUM_REFRESH_INTERVAL_MINUTES=60

# Whether to cache the processed image between requests
IMAGE_CACHE_ENABLED=true

# Enable Floyd-Steinberg dithering (set to false for simple quantization)
DITHER_ENABLED=true

# Output format (only png supported currently)
OUTPUT_FORMAT=png

# Log level: debug, info, warn, error
LOG_LEVEL=info
